#!/usr/bin/env bash

set -eo pipefail

echo "---> Quarkus JVM Buildpack"

# GET ARGS
layersdir=$1
plan=$3

# MAKE SURE DOWNLOADED ARTIFACTS WILL GET CACHED
m2layer="$layersdir"/m2repo
mkdir -p "$m2layer"
mkdir -p $HOME/.m2/repository
ln -s "$m2layer" $HOME/.m2/repository
echo -e 'cache = true' > "$m2layer.toml"

# BUILD THE APPLICATION
if [[ -f pom.xml ]]; then
    mvnCommand="mvn"
    buildCommand="$mvnCommand package -DskipTests"
    runCommand="/opt/jboss/container/java/run/run-java.sh"
fi
$buildCommand

# SET DEFAULT START COMMAND
cat > "$layersdir/launch.toml" <<EOL
[[processes]]
type = "web"
command = "ln -s /workspace/target/lib /deployments/lib; cp /workspace/target/*-runner.jar /deployments/; $runCommand"
EOL
