#!/usr/bin/env bash

set -eo pipefail

echo "---> Quarkus Native Buildpack"

# GET ARGS
layersdir=$1
plan=$3

# MAKE SURE DOWNLOADED ARTIFACTS WILL GET CACHED
m2layer="$layersdir"/m2repo
mkdir -p "$m2layer"
ln -s "$m2layer" $HOME/.m2/repository
echo -e 'cache = true' > "$m2layer.toml"

# BUILD THE APPLICATION
if [[ -f pom.xml ]]; then
    mvnCommand="mvn"
    buildCommand="$mvnCommand package -Pnative -DskipTests"
    runCommand="/home/quarkus/application"
fi
$buildCommand

# SET DEFAULT START COMMAND
cat > "$layersdir/launch.toml" <<EOL
[[processes]]
type = "web"
command = "$runCommand"
EOL
